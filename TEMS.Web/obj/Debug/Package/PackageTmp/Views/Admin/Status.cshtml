@{
    ViewBag.Title = "Status Management";
}

@section scripts{
<script type="text/javascript">
    $(document).ready(function () {
        $('#jTableStatus').jtable({
            title: 'Status Master',
            paging: true, //Enable paging
            pageSize: 10, //Set page size (default: 10)
            sorting: true, //Enable sorting
            selecting: true, //Enable selecting
            defaultSorting: 'status_id ASC', //Set default sorting
            actions: {
                listAction: '@Url.Action("StatusList","Admin")',
                deleteAction: '@Url.Action("DeleteStatus","Admin")',
                updateAction: '@Url.Action("UpdateStatus","Admin")',
                createAction: '@Url.Action("CreateStatus","Admin")'
            },
            fields: {
                status_id: { title: 'ID', key: true, create: true, edit: false },
                status_name: { title: 'Name', create: true, edit: true },
                active: {
                    title: 'Status', create: false, edit: true, type: 'checkbox',
                    values: { 'false': 'Inactive', 'true': 'Active' },
                    defaultValue: 'true'
                },
                update_dt: { title: 'Update', create: false, edit: false, type: 'date',displayFormat: 'dd-mm-yy' }
            }
        });
        //Load student list from server
        $('#jTableStatus').jtable('load');
    });
</script>
}

<h2 class="page-header">@ViewBag.Title</h2>

<div id="jTableStatus"></div>
