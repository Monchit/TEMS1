@{
    ViewBag.Title = "Action Management";
}

@section scripts{
<script type="text/javascript">
    $(document).ready(function () {
        $('#jTableAction').jtable({
            title: 'Action Master',
            paging: true, //Enable paging
            pageSize: 10, //Set page size (default: 10)
            sorting: true, //Enable sorting
            selecting: true, //Enable selecting
            defaultSorting: 'act_id ASC', //Set default sorting
            actions: {
                listAction: '@Url.Action("ActionList","Admin")',
                deleteAction: '@Url.Action("DeleteAction","Admin")',
                updateAction: '@Url.Action("UpdateAction","Admin")',
                createAction: '@Url.Action("CreateAction","Admin")'
            },
            fields: {
                act_id: { title: 'ID', key: true, create: true, edit: false },
                act_name: { title: 'Name', create: true, edit: true },
                //active: {
                //    title: 'Status', create: false, edit: true, type: 'checkbox',
                //    values: { 'false': 'Inactive', 'true': 'Active' },
                //    defaultValue: 'true'
                //},
                update_dt: { title: 'Update', create: false, edit: false, type: 'date',displayFormat: 'dd-mm-yy' }
            }
        });
        //Load student list from server
        $('#jTableAction').jtable('load');
    });
</script>
}

<h2 class="page-header">@ViewBag.Title</h2>

<div id="jTableAction"></div>
