@using TEMS.Web.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="TNC Excellent Mold System">
    <meta name="author" content="Monchit Wajirapornpongsa">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title | TEMS</title>

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/datatables")
    @Styles.Render("~/Content/formvalidator")
    @Styles.Render("~/Content/select2")
    @Styles.Render("~/Content/css")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="~/Scripts/html5shiv3.7.3.min.js"></script>
        <script src="~/Scripts/respond.min.js"></script>
    <![endif]-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/jTable")
    @Scripts.Render("~/bundles/formvalidator")
    @Scripts.Render("~/bundles/select2")
    @Scripts.Render("~/bundles/moment")
</head>
<body>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index"><span class="text-red">T</span>NC <span class="text-red">E</span>xcellent <span class="text-red">M</span>old <span class="text-red">S</span>ystem</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                @if (Session["TEMS_Auth"] != null)
                {
                <ul class="nav navbar-nav">
                    @Html.MenuLink("Menu", "MainMenu", "Home")
                </ul>
                }
                @Html.Partial("_LoginPartial")
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>

    <!-- Begin page content -->
    <div class="container-fluid">
        <div class="row divbody">
            @RenderBody()
        </div>
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>